{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@config": ["./src/config"],
      "@config/*": ["./src/config/*"],
      "@interfaces": ["./src/interfaces"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@settings": ["./src/settings"],
      "@settings/*": ["./src/settings/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@locales": ["./src/locales"],
      "@locales/*": ["./src/locales/*"],
      "@redux": ["./src/redux"],
      "@redux/*": ["./src/redux/*"],
      "@svg": ["./src/components/svg"],
      "@svg/*": ["./src/components/svg/*"],
      "@animations": ["./src/components/animations"],
      "@animations/*": ["./src/components/animations/*"],
      "@providers": ["./src/providers"],
      "@providers/*": ["./src/providers/*"],
      "@validators": ["./src/validators"],
      "@validators/*": ["./src/validators/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts", "src/redux/rtk/server/v1/location/location.interfaces.ts",
  ],
  "exclude": ["node_modules"]
}
